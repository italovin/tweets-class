@page "/login"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Login</PageTitle>

<div>
    <label for="uname"><b>Username</b></label>
    <input class="input" type="text" placeholder="Enter Username" name="uname" required>
</div>
<div>
    <label for="psw"><b>Chave de acesso</b></label>
    <input class="input" type="password" placeholder="Insira a chave" name="access-key" required
    @bind="accessKey">
</div>
<div>
    <button class="btn-primary" @onclick="RedirectToQuestions">Login</button>
</div>

@code{

    private string accessKey = "";
    private void RedirectToQuestions(){
        Console.WriteLine(accessKey);
        NavigationManager.NavigateTo("questions");
    }

}
